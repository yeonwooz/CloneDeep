{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "rootDir": "./src",
      "baseUrl": ".",
      "paths": {
        "~/*": ["src/*"],
      },
      "outDir": "./build-tsc",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "allowJs": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }